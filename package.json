{
  "name": "ares-api",
  "version": "1.0.0",
  "scripts": {
    "dev": "npm run services:up && npm run wait-for-postgres && npm run migration:up && nodemon --watch src src/server.ts",
    "test": "jest",
    "test:integration": "npm run services:up && concurrently -n nodemon,jest --hide nodemon -k -s command-jest \"nodemon --watch src src/server\" \"jest --runInBand\"",
    "services:up": "docker compose -f src/infra/compose.dev.yaml --env-file .env.development up -d",
    "services:start": "docker compose -f src/infra/compose.dev.yaml start",
    "services:down": "docker compose -f src/infra/compose.dev.yaml down",
    "services:stop": "docker compose -f src/infra/compose.dev.yaml stop",
    "migration:up": "prisma migrate dev --schema=src/infra/prisma/schema.prisma",
    "wait-for-postgres": "node src/infra/scripts/wait-for-postgres.js"
  },
  "main": "server.ts",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "cors": "^2.8.5",
    "dotenv-expand": "^12.0.2",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.39",
    "@types/async-retry": "^1.4.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.5.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "async-retry": "^1.3.3",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "concurrently": "^9.2.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.9.1",
    "eslint-config": "^0.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "author": "pedrohenrique11",
  "license": "MIT",
  "description": ""
}
